@model IEnumerable<Models.EF.PRODUCT>

@foreach (var item in Model)
{
    <div class="product-width col-md-6 col-xl-4 col-lg-6">
        <div class="product-wrapper mb-35">
            <div class="product-img">
                <a href="@Url.Action("Detail", "Shop", new { url = item.ProductURL })">
                    <img src="@item.ShowImage_1" alt="@item.ShowImage_2">
                </a>
                <div class="product-item-dec">
                    <ul>
                        <li>@item.CreatedDate.Value.Year</li>
                    </ul>
                </div>
                <div class="product-action">
                    <a class="action-plus-2 p-action-none" title="Add To Cart"
                       href="@Url.Action("Detail", "Shop", new { url = item.ProductURL })">
                        <i class=" ti-shopping-cart"></i>
                    </a>
                </div>
                <div class="product-content-wrapper">
                    <div class="product-title-spreed">
                        <h4>
                            <a href="@Url.Action("Detail", "Shop", new { url = item.ProductURL })">
                                @item.ProductName
                            </a>
                        </h4>
                    </div>
                    <div class="product-price">
                        @if (item.PromotionPrice.HasValue)
                        {
                            <span style="color: #ff0000;"><strike>$@item.ProductPrice</strike></span>
                            <span>$@item.PromotionPrice</span>
                        }
                        else
                        {
                            <span>$@item.ProductPrice</span>
                        }
                    </div>
                </div>
            </div>
            <div class="product-list-details">
                <h2>
                    <a href="@Url.Action("Detail", "Shop", new { url = item.ProductURL })">
                        @item.ProductName
                    </a>
                </h2>
                <div class="quick-view-rating">
                    <i class="fa fa-star reting-color"></i>
                    <i class="fa fa-star reting-color"></i>
                    <i class="fa fa-star reting-color"></i>
                    <i class="fa fa-star reting-color"></i>
                    <i class="fa fa-star reting-color"></i>
                </div>
                <div class="product-price">
                    @if (item.PromotionPrice.HasValue)
                    {
                        <span>$@item.PromotionPrice</span>
                    }
                    else
                    {
                        <span>$@item.ProductPrice</span>
                    }
                </div>
                <p>@item.ProductDescription</p>
                <div class="shop-list-cart">
                    <a href="@Url.Action("Detail", "Shop", new { url = item.ProductURL })"><i class="ti-shopping-cart"></i> Add to cart</a>
                </div>
            </div>
        </div>
    </div>
}